<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_boxmark"
            android:contentDescription="Logo TrackerBox"
            android:layout_marginBottom="16dp" />

        <!-- T칤tulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TrackerBox"
            android:textSize="20sp"
            android:textColor="#222222"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Campo n칰mero -->
        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese su n칰mero de l칤nea"
            android:inputType="phone"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textColorHint="#888888"
            android:textColor="#000000" />

        <!-- Confirmar bot칩n -->
        <Button
            android:id="@+id/confirmPhoneButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar n칰mero"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

        <!-- Editar bot칩n -->
        <Button
            android:id="@+id/editPhoneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar n칰mero"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <!-- Enviar bot칩n -->
        <Button
            android:id="@+id/sendButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar reporte"
            android:backgroundTint="#555555"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <!-- 游댒 Bot칩n para probar 칤cono -->
        <Button
            android:id="@+id/btnIniciarIcono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游댒 Probar 칤cono tracker"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Versi칩n 1.0 - Developed by Boxmark"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
